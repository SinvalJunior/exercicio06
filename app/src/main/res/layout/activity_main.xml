<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/jogador01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jogador 01"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/jogador02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jogador 02"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/jogador03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jogador 03"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/jogador04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jogador 04"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/jogador05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jogador 05"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/jogador06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jogador 06"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <Button
        android:onClick="calculo"
        android:id="@+id/cacular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado da conta"/>

    <TextView
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/desvio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"/>

</LinearLayout>